<style>
    .tab {
        overflow: hidden;
        display: flex;
        justify-content: space-between;
        min-height: 50px;
    }

    .tabcontent {
        display: none;
        border-top: none;

    }

    /* Style the buttons inside the tab */
    .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 17px;
    }

    /* Change background color of buttons on hover */
    .tab button:hover {
        background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .tab button.active {
        background-color: #ccc;
    }

    .tabContentCenter {
        display: flex;
        justify-content: center;
    }
</style>